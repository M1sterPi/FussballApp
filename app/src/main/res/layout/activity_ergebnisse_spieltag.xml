<?xml version="1.0" encoding="utf-8"?>

<!-- Layout f端r die Activity Spielergebnisse -->

<!-- RecyclerView f端r das einzelne Ergebnis -->

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/activity_ergebnisse_spieltag_sv"
    android:layout_width="match_parent"
    android:layout_height="729dp"
    android:fillViewport="true"
    tools:ignore="SpeakableTextPresentCheck"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activity_ergebnisse_spieltag_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".HomePage_Startseite">

        <!-- Id auf ergebnisse_spieltag f端r das Row Layout wichtig -->

        <Button
            android:id="@+id/btn_back_ergebnisse_spieltag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="152dp"
            android:layout_marginLeft="152dp"
            android:layout_marginBottom="28dp"
            android:background="@drawable/mainactivity_btn_background"
            android:text="@string/btn_back_ergebnisse_spieltag"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- RecyclerView Element f端r das Layout - Spielergebnisse -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ergebnisse_spieltag"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

